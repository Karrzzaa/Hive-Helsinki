FROM alpine

MAINTAINER Karri Moilanen <kmoilane@student.hive.fi>

RUN apk update && apk add vim

CMD vim

# To build this:
#--------------------------------------------
#		docker build -t ex00 .
#--------------------------------------------
# To run container:
#--------------------------------------------
#		docker run -it --rm --name vim ex00
#---------------------------------------------
