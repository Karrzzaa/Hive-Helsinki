FROM	ft-rails:on-build

EXPOSE	3000
CMD		["rails", "s", "-b", "0.0.0.0", "-p", "3000"]

# To build this with ex02 tag, run the following command while
# you're in the same folder with this Dockerfile:
#-----------------------------------------------------------------------------#
#		docker build -t ex02
#-----------------------------------------------------------------------------#
# To run the container use following command:
#-----------------------------------------------------------------------------#
#		docker run -it -rm -p 3000:3000 ex02
#-----------------------------------------------------------------------------#
